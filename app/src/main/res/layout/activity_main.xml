<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Калькулятор"
        android:background="#673AB7"
        app:titleTextColor="@color/white">

        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="end"
            android:layout_gravity="end"
            android:src="@drawable/ic_exit_to_app_24"
            android:background="@null"/>

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/mainActivityEditTextET"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/mainActivityTextVieResultTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>


    <GridLayout

        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:rowCount="7"
        android:columnCount="4"
        android:layout_gravity="center"
        android:paddingStart="15dp">



    <Button
        android:id="@+id/oneButtonBTN"
        android:text="1"
        android:layout_column="0"
        android:layout_row="1"/>

    <Button
        android:id="@+id/twoButtonBTN"
        android:text="2"
        android:layout_column="1"
        android:layout_row="1"/>

    <Button
        android:id="@+id/threeButtonBTN"
        android:text="3"
        android:layout_column="2"
        android:layout_row="1"/>

    <Button
        android:id="@+id/fourButtonBTN"
        android:text="4"
        android:layout_column="0"
        android:layout_row="2"/>

    <Button
        android:id="@+id/fiveButtonBTN"
        android:text="5"
        android:layout_column="1"
        android:layout_row="2"/>

    <Button
        android:id="@+id/sixButtonBTN"
        android:text="6"
        android:layout_column="2"
        android:layout_row="2"/>

    <Button
        android:id="@+id/sevenButtonBTN"
        android:text="7"
        android:layout_column="0"
        android:layout_row="3"/>

    <Button
        android:id="@+id/eightButtonBTN"
        android:text="8"
        android:layout_column="1"
        android:layout_row="3"/>

    <Button
        android:id="@+id/nineButtonBTN"
        android:text="9"
        android:layout_column="2"
        android:layout_row="3"/>

    <Button
        android:id="@+id/resetButtonBTN"
        android:layout_width="360dp"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="4"

        android:text="reset" />

    <Button
        android:id="@+id/minusButtonBTN"
        android:text="-"
        android:layout_column="3"
        android:layout_row="2"/>

    <Button
        android:id="@+id/multiplyButtonBTN"
        android:text="*"
        android:layout_column="3"
        android:layout_row="1"/>

    <Button
        android:id="@+id/shareButtonBTN"
        android:text="/"
        android:layout_column="3"
        android:layout_row="0"/>

    <Button
        android:id="@+id/plusButtonBTN"
        android:text="+"
        android:layout_rowSpan="3"
        android:layout_height="140dp"
        android:layout_row="3"
        android:layout_column="3"/>

    <Button
        android:id="@+id/equallyButtonBTN"
        android:text="="
        android:layout_width="270dp"
        android:layout_columnSpan="3"
        android:layout_row="5"
        android:layout_column="0"
        />

    <Button
        android:id="@+id/zeroButtonBTN"
        android:layout_width="180dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:text="0" />

    </GridLayout>


</LinearLayout>